creates a PersistentVolumeClaim when chartMode=custom:
  1: |
    apiVersion: v1
    kind: PersistentVolumeClaim
    metadata:
      labels:
        app: RELEASE-NAME
      name: RELEASE-NAME
      namespace: NAMESPACE
    spec:
      accessModes:
      - ReadWriteOnce
      resources:
        requests:
          storage: 10Gi
creates a PersistentVolumeClaim when chartMode=standalone:
  1: |
    apiVersion: v1
    kind: PersistentVolumeClaim
    metadata:
